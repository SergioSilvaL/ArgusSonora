<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <TextView
        android:text="Selecione un tipo de asistencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:layout_margin="15dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:onClick="capturaClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"
            android:elevation="4dp"
            android:padding="16dp"
            android:clickable="true"
            android:id="@+id/btnCapturaAsistencia">

            <ImageView

                android:src="@drawable/ic_donut_small_black_24dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:tint="@color/cardview_light_background"
                android:layout_marginRight="32dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Asistió"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7.5dp"
        android:layout_marginTop="7.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:onClick="capturaClick"
            android:id="@+id/btnCapturaInAsistencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_light"
            android:elevation="4dp"
            android:padding="16dp"
            android:clickable="true">

            <ImageView

                android:src="@drawable/ic_donut_small_black_24dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:tint="@color/cardview_light_background"
                android:layout_marginRight="32dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="No Asistió"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7.5dp">

        <LinearLayout
            android:onClick="capturaClick"
            android:id="@+id/btnCapturaDobleTurno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_light"
            android:elevation="4dp"
            android:padding="16dp"
            android:clickable="true">

            <ImageView

                android:src="@drawable/ic_donut_small_black_24dp"
                android:layout_height="35dp"
                android:layout_marginRight="32dp"
                android:layout_width="35dp"
                android:tint="@color/cardview_light_background"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Doble Turno"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7.5dp"
        android:layout_marginBottom="7.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:onClick="capturaClick"
            android:id="@+id/btnCapturaCubreDescanso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:elevation="4dp"
            android:padding="16dp"
            android:clickable="true">



            <ImageView

                android:src="@drawable/ic_donut_small_black_24dp"
                android:layout_height="35dp"
                android:layout_marginRight="32dp"
                android:layout_width="35dp"
                android:tint="@color/cardview_light_background"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Cubre Descanso"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"/>




        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7.5dp"
        android:layout_marginTop="7.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:id="@+id/btnCapturaHorasExtra"
            android:onClick="capturaClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_purple"
            android:elevation="4dp"
            android:padding="16dp"
            android:clickable="true">


            <ImageView

                android:src="@drawable/ic_donut_small_black_24dp"
                android:layout_height="35dp"
                android:layout_marginRight="32dp"
                android:layout_width="35dp"
                android:tint="@color/cardview_light_background"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Horas Extra"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"/>



        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>