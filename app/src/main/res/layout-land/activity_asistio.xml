<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="1"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".presentation.activity.AsistioActivity"
    android:background="@color/cardview_light_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Sergio Silva Leon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameLabel"
            android:layout_alignBottom="@+id/CloseBtn"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>

        <TextView
            android:text="Almacen Zapata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/nameLabel"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:id="@+id/clientLabel"/>

        <ImageButton
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
            android:id="@+id/CloseBtn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@color/cardview_light_background"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="16dp"
            android:layout_alignParentTop="true"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp">

        <com.github.gcacace.signaturepad.views.SignaturePad
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/signaturePad"
            android:layout_weight="0.95"
            android:background="@color/cardview_light_background"
            android:layout_margin="1sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Para comenzar de nuevo, toca la pantalla 3 veces"/>

        <Button
            android:text="Continuar"
            android:id="@+id/ContinuarBtn"
            android:layout_gravity="right"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:textColor="@color/editTextColorWhite"
            android:background="@android:color/holo_blue_light"
            />
    </LinearLayout>

</LinearLayout>